---
import PageLayout from "@/layouts/Base";

const meta = {
	title: "Coming Soon | Project Under Construction",
	description: "This project is currently under construction. Please check back soon for updates.",
};
---

<PageLayout meta={meta}>
	<div class="flex flex-col">
		<h1 class="text-theme-accent dark:text-theme-accent-2 text-4xl font-bold">Coming Soon!</h1>
		<p class="text-theme-text dark:text-theme-text mt-4 text-lg">
			This project is under construction. I'm working hard to create something truly unique for you.
			Stay tuned!
		</p>
		<div class="mt-8">
			<a
				href="/"
				class="cactus-link font-bold"
			>
				Back to Home
			</a>
		</div>
	</div>
</PageLayout>
